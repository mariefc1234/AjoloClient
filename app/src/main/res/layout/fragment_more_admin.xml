<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.more_admin.MoreAdminFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/more"
                android:layout_marginTop="25dp"
                android:layout_marginStart="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More"
                android:textSize="50sp"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardUserinfor"
                app:cardElevation="10dp"
                android:layout_width="350dp"
                android:layout_height="80dp"
                app:layout_constraintTop_toBottomOf="@+id/more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:cardCornerRadius="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/userInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:scaleType="fitCenter"
                            android:src="@drawable/user"
                            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

                        <TextView
                            android:id="@+id/textViewUserName"
                            android:layout_marginStart="20dp"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:text="template"
                            android:textSize="30sp" />

                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="50dp"
                android:id="@+id/cardSystemOptions"
                app:cardElevation="10dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/cardUserinfor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:cardCornerRadius="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:id="@+id/languageAdmin"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:clickable="true"
                        >

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:scaleType="fitCenter"
                            android:src="@drawable/languaje_change"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="15dp"
                            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="@string/language"
                            android:textSize="20sp"
                            android:layout_marginEnd="90dp"
                            />
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:text=">"
                            android:textSize="30sp" />


                    </LinearLayout>

                    <View
                        android:id="@+id/separator4"
                        app:layout_constraintTop_toBottomOf="@+id/languageAdmin"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="270dp"
                        android:layout_height="1dp"
                        android:background="@color/purple_1"
                        />

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:id="@+id/btnSupportAdmin"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/separator4"
                        android:clickable="true"
                        >

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:scaleType="fitCenter"
                            android:src="@drawable/support"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="15dp"
                            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="@string/support"
                            android:textSize="20sp"
                            android:layout_marginEnd="90dp"
                            />
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:text=">"
                            android:textSize="30sp" />


                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:clickable="true"
                android:layout_marginTop="50dp"
                android:id="@+id/logoutButton"
                app:cardElevation="10dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/cardSystemOptions"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:cardCornerRadius="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="@color/purple_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:scaleType="fitCenter"
                            android:src="@drawable/logout"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="15dp"
                            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck"
                            app:tint="@color/white" />
                        <TextView
                            android:textColor="@color/white"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/logout"
                            android:textSize="20sp"
                            android:layout_marginEnd="140dp"
                            />
                        <TextView
                            android:textColor="@color/white"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:text=">"
                            android:textSize="30sp" />


                    </LinearLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <View
                app:layout_constraintTop_toBottomOf="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>