<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top">
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:text="@string/item_stall_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stars"
        />
    <LinearLayout
        android:id="@+id/stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageButton
            android:id="@+id/stars_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="#00FFFFFF"
            android:src="@drawable/star" />
        <ImageButton
            android:id="@+id/stars_icon2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="#00FFFFFF"
            android:src="@drawable/star" />
        <ImageButton
            android:id="@+id/stars_icon3"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="#00FFFFFF"
            android:src="@drawable/star" />
        <ImageButton
            android:id="@+id/stars_icon4"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="#00FFFFFF"
            android:src="@drawable/star" />
        <ImageButton
            android:id="@+id/stars_icon5"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="#00FFFFFF"
            android:src="@drawable/star" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/img_up_login"/>
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_stall_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name"/>
    </LinearLayout>
    <EditText
        android:id="@+id/review_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/button_publish_review"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Publish review" />

</LinearLayout>