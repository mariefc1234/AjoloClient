<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:gravity="top|center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/stall_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/img_up_login"/>
            <TextView
                android:id="@+id/stall_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:text="Name"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/stall_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:text="$$$"/>
                <TextView
                    android:id="@+id/stall_stars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:text="4.5"/>
                <ImageView
                    android:id="@+id/stall_start_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/star_fill"/>
            </LinearLayout>
            <TextView
                android:id="@+id/stall_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.Material3.BodyMedium"
                android:text="@string/item_stall_description"/>

            <Button
                android:id="@+id/stall_add_review"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="Add review" />
            <Button
                android:id="@+id/stall_see_review"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:text="reviews" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>