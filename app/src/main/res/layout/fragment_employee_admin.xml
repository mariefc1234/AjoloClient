<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home_admin.admin_panel.employees_admin.EmployeeAdminFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tvEmployees"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/employees"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:textSize="25dp"
                />

            <View
                android:id="@+id/datas"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/tvEmployees"
                />

            <LinearLayout
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:id="@+id/addEmployee"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/corner"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/datas"
                android:radius="50dp">

                <ImageButton
                    android:id="@+id/newEmployeeButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:scaleType="fitCenter"
                    android:src="@drawable/plus"
                    android:tint="@color/white"
                    tools:ignore="ContentDescription,UseAppTint,SpeakableTextPresentCheck" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>