<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.more_user.MoreUserFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/more"
                android:layout_marginTop="25dp"
                android:layout_marginStart="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More"
                android:textSize="50sp"
                />


            <androidx.cardview.widget.CardView
                android:id="@+id/cardUserinfor"
                app:cardElevation="10dp"
                android:layout_width="350dp"
                android:layout_height="80dp"
                app:layout_constraintTop_toBottomOf="@+id/more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:cardCornerRadius="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/userInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/user_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="30dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:scaleType="fitCenter"
                            android:src="@drawable/user"
                            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

                        <ImageView
                            android:id="@+id/editIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="15dp"
                            android:src="@drawable/edit_img"
                            android:background="?android:attr/selectableItemBackground"/>

                        <TextView
                            android:id="@+id/user_username"
                            android:layout_marginStart="20dp"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:text="template"
                            android:textSize="30sp" />



                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="50dp"
                android:id="@+id/cardUserOptions"
                app:cardElevation="10dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/cardUserinfor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:cardCornerRadius="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:clickable="true"
                        android:layout_marginTop="5dp"
                        android:id="@+id/reviews"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/moreReview"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:scaleType="fitCenter"
                            android:src="@drawable/star"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="15dp"
                            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                        <TextView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:text="@string/reviews"
                            android:textSize="20sp"
                            />
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:text=">"
                            android:textSize="30sp" />


                    </LinearLayout>

                    <View
                        android:id="@+id/separator1"
                        app:layout_constraintTop_toBottomOf="@+id/reviews"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="270dp"
                        android:layout_height="1dp"
                        android:background="@color/color_primary"
                        />

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:id="@+id/shopCoinsButton"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/separator1"
                        android:clickable="true"
                        >

                        <ImageView
                            android:id="@+id/moreCoins"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:scaleType="fitCenter"
                            android:src="@drawable/shop_car"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="15dp"
                            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                        <TextView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:text="@string/buy_ajolocoins"
                            android:textSize="20sp"
                            />
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:text=">"
                            android:textSize="30sp" />


                    </LinearLayout>

                    <View
                        android:id="@+id/separator2"
                        app:layout_constraintTop_toBottomOf="@+id/shopCoinsButton"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="270dp"
                        android:layout_height="1dp"
                        android:background="@color/color_primary"
                        />

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:id="@+id/historyReview"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/separator2"
                        android:clickable="true"
                        >

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:scaleType="fitCenter"
                            android:src="@drawable/history_buys"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="15dp"
                            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                        <TextView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:text="@string/history"
                            android:textSize="20sp"
                            />
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:text=">"
                            android:textSize="30sp" />


                    </LinearLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginTop="50dp"
                android:id="@+id/cardSystemOptions"
                app:cardElevation="10dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/cardUserOptions"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:cardCornerRadius="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:id="@+id/language"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:clickable="true"
                        >

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:scaleType="fitCenter"
                            android:src="@drawable/languaje_change"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="15dp"
                            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                        <TextView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:text="@string/language"
                            android:textSize="20sp"

                            />
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:text=">"
                            android:textSize="30sp" />


                    </LinearLayout>

                    <View
                        android:id="@+id/separator4"
                        app:layout_constraintTop_toBottomOf="@+id/language"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="270dp"
                        android:layout_height="1dp"
                        android:background="@color/color_primary"
                        />

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:id="@+id/btnSupport"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/separator4"
                        android:clickable="true"
                        >

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:scaleType="fitCenter"
                            android:src="@drawable/support"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="15dp"
                            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                        <TextView
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:text="@string/support"
                            android:textSize="20sp"
                            />
                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:text=">"
                            android:textSize="30sp" />


                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:clickable="true"
                android:layout_marginTop="50dp"
                android:id="@+id/logoutButtonUser"
                app:cardElevation="10dp"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/cardSystemOptions"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:cardCornerRadius="15dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="@color/color_primary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:background="?android:attr/selectableItemBackground"
                            android:scaleType="fitCenter"
                            android:src="@drawable/logout"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="15dp"
                            tools:ignore="ContentDescription,SpeakableTextPresentCheck,TouchTargetSizeCheck"
                            app:tint="@color/white" />
                        <TextView
                            android:textColor="@color/white"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:text="@string/logout"
                            android:textSize="20sp"
                            />
                        <TextView
                            android:textColor="@color/white"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:text=">"
                            android:textSize="30sp" />


                    </LinearLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <View
                app:layout_constraintTop_toBottomOf="@+id/logoutButtonUser"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>